<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <TextView
        android:id="@+id/nombreD"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/precioD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precioD"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="45dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/rankingD"
        app:layout_constraintStart_toStartOf="@+id/nombreD"
        app:layout_constraintTop_toBottomOf="@+id/nombreD" />

    <TextView
        android:id="@+id/rankingD"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="64dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fotoD"
        app:layout_constraintStart_toStartOf="@+id/precioD"
        app:layout_constraintTop_toBottomOf="@+id/precioD" />

    <ImageView
        android:id="@+id/fotoD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankingD"
        app:srcCompat="@mipmap/ic_launcher" />
</android.support.constraint.ConstraintLayout>