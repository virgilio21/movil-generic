        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/pictureProduct"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="58dp"
            tools:srcCompat="@drawable/compan_ias_de_gas_natural"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/textViewNameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tendejon La esperanza"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textViewUbication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbaciciÃ³n:"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="220dp" />

        <TextView
            android:id="@+id/textViewValueCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calle 19 320 Juan Pablo"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="220dp" />

        <ImageButton
            android:id="@+id/ImageButtonMap"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:background="null"
