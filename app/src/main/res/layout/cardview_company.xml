<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCompany"
    style="@style/CardView.Light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="13dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/ImageButtonMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:background="null"
            app:layout_constraintBottom_toTopOf="@+id/textViewVerProducts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewYesOrNo"
            app:layout_constraintTop_toBottomOf="@+id/TextViewHomeService"
            app:srcCompat="@drawable/icons8_mapa_de_pin_64">

        </ImageButton>

        <ImageButton
            android:id="@+id/ImageButtonProducts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="1dp"
            android:background="null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ImageButtonMap"
            app:layout_constraintStart_toEndOf="@+id/textViewVerProducts"
            app:layout_constraintTop_toBottomOf="@+id/TextViewHomeService"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/icons8_producto_usado_64" />

        <ImageView
            android:id="@+id/pictureProduct"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="27dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textViewUbication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNameCompany"
            tools:srcCompat="@drawable/compan_ias_de_gas_natural" />

        <TextView
            android:id="@+id/textViewValueCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Calle 19 320 Juan Pablo"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/TextViewHomeService"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewUbication" />

        <TextView
            android:id="@+id/textViewNameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:text="Tendejon La esperanza"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/pictureProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewHomeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="Servicio a domicilio: "
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ImageButtonMap"
            app:layout_constraintEnd_toStartOf="@+id/textViewYesOrNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewUbication" />

        <TextView
            android:id="@+id/textViewYesOrNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="8dp"
            android:text="Si"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ImageButtonProducts"
            app:layout_constraintEnd_toStartOf="@+id/ImageButtonMap"
            app:layout_constraintStart_toEndOf="@+id/TextViewHomeService" />

        <TextView
            android:id="@+id/textViewUbication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="12dp"
            android:text="UbaciciÃ³n:"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/TextViewHomeService"
            app:layout_constraintEnd_toStartOf="@+id/textViewValueCalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pictureProduct" />

        <TextView
            android:id="@+id/textViewVerProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="11dp"
            android:text="Ver Productos -->"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ImageButtonProducts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageButtonMap" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>