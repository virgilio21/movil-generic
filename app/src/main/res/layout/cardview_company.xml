            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="255dp">

        </ImageButton>

        <TextView
            android:id="@+id/TextViewHomeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio a domicilio: "
            android:textColor="@android:color/black"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="253dp" />

        <TextView
            android:id="@+id/textViewYesOrNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="253dp" />

        <ImageButton
            android:id="@+id/ImageButtonProducts"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:background="null"
            app:srcCompat="@drawable/icons8_producto_usado_64"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="283dp" />

        <TextView
            android:id="@+id/textViewVerProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Productos -->"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="295dp" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>